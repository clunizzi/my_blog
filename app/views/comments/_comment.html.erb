<%= div_for comment do %>
	<p>
	<strong> Posted <%= time_ago_in_words(comment.created_at) %> ago </strong>
	
	<br />
	<%= comment.body %>
	<br />
	<%= link_to 'Delete', post_comment_path(comment.post.id,comment), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
	</p>
<% end %>